{
  "compilerOptions": {
    "outDir": "./dist/",
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./src/spec"]
}
